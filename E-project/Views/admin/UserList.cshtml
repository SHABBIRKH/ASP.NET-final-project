@model IEnumerable<E_project.Models.User>

@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_adminlayout.cshtml";
}


<main id="main" class="main">
  
    <div class="pagetitle">
        <h1>Users List</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Users List</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Users</h5>

                       
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th> @Html.DisplayNameFor(model => model.UserId) </th>
                                    <th> @Html.DisplayNameFor(model => model.Username)</th>
                                    <th>Email</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td> @Html.DisplayFor(modelItem => item.UserId)</td>
                                        <td> @Html.DisplayFor(modelItem => item.Username)</td>
                                        <td> @Html.DisplayFor(modelItem => item.Email)</td>


                                        <td>
                                        <a class="dropdown-item d-flex align-items-center" asp-action="DeletePolicy" asp-route-id="@item.UserId">
                                                <button type="button" class="btn btn-danger"><i class="bi bi-exclamation-octagon me-1"></i> Delete</button>

                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
